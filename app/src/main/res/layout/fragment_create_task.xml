<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_task_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.CreateTask">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="24dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/create_task_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="center"
            android:text="@string/create_task_title"
            android:textStyle="bold" />

        <!-- TODO: Change -->
        <!-- Title -->
        <TextView
            android:id="@+id/create_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/title_label" />

        <!-- TODO: Change -->
        <EditText
            android:id="@+id/create_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:maxLines="1"
            android:text="@string/create_title"
            tools:ignore="LabelFor" />


        <!-- TODO: Change -->
        <!-- Description -->
        <TextView
            android:id="@+id/create_desc_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="20dp"
            android:hint="@string/description_label" />

        <!-- TODO: Change -->
        <EditText
            android:id="@+id/create_desc_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="text"
            android:labelFor="@id/create_desc_label"
            android:lines="4"
            android:maxLines="4"
            android:minLines="2"
            android:scrollbars="vertical"
            android:text="@string/create_description"
            tools:ignore="LabelFor" />


        <!-- Date -->
        <!-- TODO: Change -->
        <TextView
            android:id="@+id/create_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="20dp"
            android:text="@string/end_date_label" />

        <!-- TODO: Change -->
        <CalendarView
            android:id="@+id/create_date_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <!-- Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- TODO: Change -->
            <Button
                android:id="@+id/create_create_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/button_create" />

            <!-- TODO: Change -->
            <Button
                android:id="@+id/create_cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@id/create_create_button"
                android:text="@string/button_cancel" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>